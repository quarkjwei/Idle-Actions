{
  "name": "Idle Alert",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension executes user-defined actions when the browser is idle for a set amount of time",
  "homepage_url": "https://github.com/quarkjwei",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "idle",
    "notifications",
    "storage",
    "tabs"
  ]
}
